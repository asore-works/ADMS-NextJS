{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["**/*.ts","**/*.tsx","types/**/*.ts"],
  "exclude": ["node_modules"]
}